#!/bin/bash --login

#SBATCH --mail-type=END
#SBATCH --mail-user=first.last@jax.org
#SBATCH -p compute
#SBATCH -q batch
#SBATCH -t 10:00:00
#SBATCH --mem=2G

workPath=/fastscratch/username/work/
[ ! -d ${workPath} ] && mkdir ${workPath}

~/nextflow run \
--input=assets/samplesheet_st.csv \
main.nf \
-with-timeline -with-trace -with-report \
-profile slurm,singularity \
-work-dir "$workPath" \
-resume
